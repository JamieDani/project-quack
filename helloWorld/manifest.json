{
  "manifest_version": 3,
  "name": "Gesture Control",
  "version": "1.1",
  "description": "Control Chrome with hand gestures via webcam.",
  "permissions": ["scripting", "activeTab", "tabs", "videoCapture"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "android-chrome-192x192.png",
      "48": "android-chrome-192x192.png",
      "128": "android-chrome-192x192.png"
    }
  },
  "icons": {
    "16": "android-chrome-192x192.png",
    "48": "android-chrome-192x192.png",
    "128": "android-chrome-192x192.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
